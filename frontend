  <script>
    const names = [
      {
        name: "柳青",
        meaning: "柳，柔而有节；青，春之色，象征生机与希望。",
        source: "出自《诗经·小雅·青蝇》"
      },
      {
        name: "洛妍",
        meaning: "洛，古水名；妍，美好，妩媚。",
        source: "出自《洛神赋》"
      },
      {
        name: "辰溪",
        meaning: "辰，星辰；溪，小河。象征高远与柔情。",
        source: "灵感源于宋词“溪云初起日沉阁”"
      }
    ];

    document.getElementById("nameForm").addEventListener("submit", function (e) {
      e.preventDefault();
      const results = document.getElementById("results");
      results.innerHTML = "";
      document.getElementById("celebrationPage").classList.add("hidden");

      names.forEach(name => {
        const card = document.createElement("div");
        card.className = "card";
        card.innerHTML = `
          <h3>${name.name}</h3>
          <p>${name.meaning}</p>
          <small>${name.source}</small>
        `;
        card.addEventListener("click", () => {
          document.getElementById("results").classList.add("hidden");
          document.getElementById("celebrationPage").classList.remove("hidden");
          document.getElementById("finalName").textContent = "Your name is: " + name.name;
        });
        results.appendChild(card);
      });
    });

    function restart() {
      document.getElementById("celebrationPage").classList.add("hidden");
      document.getElementById("results").classList.remove("hidden");
    }
  </script>
